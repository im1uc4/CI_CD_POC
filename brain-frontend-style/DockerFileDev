# base image
FROM node:10-alpine

# set working directory
WORKDIR /app

# add `/app/node_modules/.bin` to $PATH
ENV PATH /app/node_modules/.bin:$PATH

# install and cache app dependencies
COPY brain-frontend-style/package.json /app/package.json

RUN npm install
RUN npm update
RUN npm install -g @angular/cli
RUN ng update @angular/cli --migrate-only --from=8.3.13

# add app
COPY brain-frontend-style/. /app

# start app
CMD app/ng serve --host 0.0.0.0
